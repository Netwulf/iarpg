{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "type": "plain",
      "value": "https://iarpg-api.railway.app"
    },
    "NEXTAUTH_URL": {
      "type": "plain",
      "value": "https://iarpg-web.vercel.app"
    },
    "NEXTAUTH_SECRET": {
      "type": "secret",
      "value": "@nextauth-secret"
    },
    "DATABASE_URL": {
      "type": "secret",
      "value": "@database-url"
    },
    "GOOGLE_CLIENT_ID": {
      "type": "secret",
      "value": "@google-client-id"
    },
    "GOOGLE_CLIENT_SECRET": {
      "type": "secret",
      "value": "@google-client-secret"
    },
    "DISCORD_CLIENT_ID": {
      "type": "secret",
      "value": "@discord-client-id"
    },
    "DISCORD_CLIENT_SECRET": {
      "type": "secret",
      "value": "@discord-client-secret"
    },
    "OPENAI_API_KEY": {
      "type": "secret",
      "value": "@openai-api-key"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/api/:path*",
      "destination": "https://iarpg-api.railway.app/api/:path*",
      "permanent": false
    }
  ]
}
